---
// Integration Detail Cards component
---

<section class="py-16 bg-[#F9FAFB]">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-[#0F172A] mb-4">Featured integrations</h2>
      <p class="text-lg text-[#475569]">
        Deep integrations that transform how your team works together
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Google Workspace -->
      <div class="bg-white rounded-xl border border-[#E2E8F0] p-8 shadow-[0_4px_16px_rgba(15,23,42,0.08)] hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-6">
          <img
            class="h-12 w-12 mr-4"
            src="https://storage.googleapis.com/uxpilot-auth.appspot.com/b3dd12880e-15e9df500569aae35928.png"
            alt="Google Workspace"
          >
          <h3 class="text-xl font-semibold text-[#0F172A]">Google Workspace</h3>
        </div>

        <ul class="space-y-3 mb-6">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Single sign-on with Google accounts</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Schedule meetings directly from tasks</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Attach Drive files to projects and tasks</span>
          </li>
        </ul>

        <div class="flex flex-col sm:flex-row gap-3">
          <button class="bg-[#FF8800] hover:bg-[#FF7700] text-white px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Connect
          </button>
          <button class="border border-[#E2E8F0] text-[#475569] hover:border-[#00C4AB] hover:text-[#00C4AB] px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Learn more
          </button>
        </div>
      </div>

      <!-- Slack -->
      <div class="bg-white rounded-xl border border-[#E2E8F0] p-8 shadow-[0_4px_16px_rgba(15,23,42,0.08)] hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-6">
          <img
            class="h-12 w-12 mr-4"
            src="https://storage.googleapis.com/uxpilot-auth.appspot.com/4942217d46-41b0c105abf7aaaf302c.png"
            alt="Slack"
          >
          <h3 class="text-xl font-semibold text-[#0F172A]">Slack</h3>
        </div>

        <ul class="space-y-3 mb-6">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Sync channels with project discussions</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Convert messages to tasks instantly</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Start huddles that become UTS meetings</span>
          </li>
        </ul>

        <div class="flex flex-col sm:flex-row gap-3">
          <button class="bg-[#FF8800] hover:bg-[#FF7700] text-white px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Connect
          </button>
          <button class="border border-[#E2E8F0] text-[#475569] hover:border-[#00C4AB] hover:text-[#00C4AB] px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Learn more
          </button>
        </div>
      </div>

      <!-- GitHub -->
      <div class="bg-white rounded-xl border border-[#E2E8F0] p-8 shadow-[0_4px_16px_rgba(15,23,42,0.08)] hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-6">
          <div class="h-12 w-12 bg-black rounded-lg flex items-center justify-center mr-4">
            <i class="fa-brands fa-github text-white text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-[#0F172A]">GitHub</h3>
        </div>

        <ul class="space-y-3 mb-6">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Link pull requests to tasks automatically</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">View CI/CD status checks in tasks</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Auto-close issues when tasks complete</span>
          </li>
        </ul>

        <div class="flex flex-col sm:flex-row gap-3">
          <button class="bg-[#FF8800] hover:bg-[#FF7700] text-white px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Connect
          </button>
          <button class="border border-[#E2E8F0] text-[#475569] hover:border-[#00C4AB] hover:text-[#00C4AB] px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Learn more
          </button>
        </div>
      </div>

      <!-- Zoom -->
      <div class="bg-white rounded-xl border border-[#E2E8F0] p-8 shadow-[0_4px_16px_rgba(15,23,42,0.08)] hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-6">
          <img
            class="h-12 w-12 mr-4"
            src="https://storage.googleapis.com/uxpilot-auth.appspot.com/7c0f1dfff6-f1c9c0042ffc92bc1fee.png"
            alt="Zoom"
          >
          <h3 class="text-xl font-semibold text-[#0F172A]">Zoom</h3>
        </div>

        <ul class="space-y-3 mb-6">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Schedule and join meetings from tasks</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Automatic meeting recordings in projects</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Generate action items from transcripts</span>
          </li>
        </ul>

        <div class="flex flex-col sm:flex-row gap-3">
          <button class="bg-[#FF8800] hover:bg-[#FF7700] text-white px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Connect
          </button>
          <button class="border border-[#E2E8F0] text-[#475569] hover:border-[#00C4AB] hover:text-[#00C4AB] px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Learn more
          </button>
        </div>
      </div>

      <!-- Figma -->
      <div class="bg-white rounded-xl border border-[#E2E8F0] p-8 shadow-[0_4px_16px_rgba(15,23,42,0.08)] hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-6">
          <div class="h-12 w-12 bg-[#F24E1E] rounded-lg flex items-center justify-center mr-4">
            <i class="fa-brands fa-figma text-white text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-[#0F172A]">Figma</h3>
        </div>

        <ul class="space-y-3 mb-6">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Embed design files in project tasks</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Live preview of design changes</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Convert comments to development tasks</span>
          </li>
        </ul>

        <div class="flex flex-col sm:flex-row gap-3">
          <button class="bg-[#FF8800] hover:bg-[#FF7700] text-white px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Connect
          </button>
          <button class="border border-[#E2E8F0] text-[#475569] hover:border-[#00C4AB] hover:text-[#00C4AB] px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Learn more
          </button>
        </div>
      </div>

      <!-- Notion -->
      <div class="bg-white rounded-xl border border-[#E2E8F0] p-8 shadow-[0_4px_16px_rgba(15,23,42,0.08)] hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-6">
          <img
            class="h-12 w-12 mr-4"
            src="https://storage.googleapis.com/uxpilot-auth.appspot.com/d49f27da61-4672c8d0465d9d2b9193.png"
            alt="Notion"
          >
          <h3 class="text-xl font-semibold text-[#0F172A]">Notion</h3>
        </div>

        <ul class="space-y-3 mb-6">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Sync project documentation automatically</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Create tasks from Notion database items</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Embed pages in project discussions</span>
          </li>
        </ul>

        <div class="flex flex-col sm:flex-row gap-3">
          <button class="bg-[#FF8800] hover:bg-[#FF7700] text-white px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Connect
          </button>
          <button class="border border-[#E2E8F0] text-[#475569] hover:border-[#00C4AB] hover:text-[#00C4AB] px-4 py-2 rounded-xl font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-[#00C4AB] focus:ring-offset-2">
            Learn more
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
