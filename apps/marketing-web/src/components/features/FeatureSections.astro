---
// Feature Sections with alternating layouts
---

<section class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Project Management -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-24">
      <div class="space-y-6">
        <h2 class="text-4xl font-bold text-[#0F172A] mb-4">Project Management</h2>
        <p class="text-lg text-[#475569] mb-6">
          Organize your work with powerful project management tools that scale with your team.
        </p>
        <ul class="space-y-3">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Sprint boards with drag-and-drop functionality</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Visual roadmaps and timeline planning</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Custom fields and task templates</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Workflow automations and triggers</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Granular permissions and access control</span>
          </li>
        </ul>
      </div>
      <div class="lg:order-last">
        <div class="bg-white rounded-xl shadow-[0_4px_16px_rgba(15,23,42,0.08)] border border-[#E2E8F0] overflow-hidden">
          <img
            src="https://storage.googleapis.com/uxpilot-auth.appspot.com/400c793d5a-f61303d670a693d11a43.png"
            alt="Project management dashboard with Kanban boards and task tracking"
            class="w-full h-64 object-cover"
          >
        </div>
      </div>
    </div>

    <!-- Team Chat -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-24">
      <div class="lg:order-first">
        <div class="bg-white rounded-xl shadow-[0_4px_16px_rgba(15,23,42,0.08)] border border-[#E2E8F0] overflow-hidden">
          <img
            src="https://storage.googleapis.com/uxpilot-auth.appspot.com/400c793d5a-f61303d670a693d11a43.png"
            alt="Team chat interface with project-linked channels and file sharing"
            class="w-full h-64 object-cover"
          >
        </div>
      </div>
      <div class="space-y-6">
        <div class="flex items-center gap-3 mb-4">
          <h2 class="text-4xl font-bold text-[#0F172A]">Team Chat</h2>
          <span class="bg-[#00C4AB] text-white text-xs px-3 py-1 rounded-full font-medium">
            Slack-style UX
          </span>
        </div>
        <p class="text-lg text-[#475569] mb-6">
          Keep conversations organized and connected to your work with contextual team chat.
        </p>
        <ul class="space-y-3">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Threaded conversations for better organization</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Smart mentions and notifications</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Seamless file sharing and previews</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Project-linked channels for context</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Meetings -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-24">
      <div class="space-y-6">
        <div class="flex items-center gap-3 mb-4">
          <h2 class="text-4xl font-bold text-[#0F172A]">Meetings</h2>
          <span class="bg-[#FF8800] text-white text-xs px-3 py-1 rounded-full font-medium">
            1-click from tasks
          </span>
        </div>
        <p class="text-lg text-[#475569] mb-6">
          Start video meetings instantly from any project context without losing momentum.
        </p>
        <ul class="space-y-3">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Project-scope meetings with context</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Quick chat huddles for instant collaboration</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Automatic recordings and transcripts</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Calendar integration and scheduling</span>
          </li>
        </ul>
      </div>
      <div class="lg:order-last">
        <div class="bg-white rounded-xl shadow-[0_4px_16px_rgba(15,23,42,0.08)] border border-[#E2E8F0] overflow-hidden">
          <img
            src="https://storage.googleapis.com/uxpilot-auth.appspot.com/400c793d5a-f61303d670a693d11a43.png"
            alt="Video meeting interface integrated with project workspace"
            class="w-full h-64 object-cover"
          >
        </div>
      </div>
    </div>

    <!-- CRM & Insights -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="lg:order-first">
        <div class="bg-white rounded-xl shadow-[0_4px_16px_rgba(15,23,42,0.08)] border border-[#E2E8F0] overflow-hidden">
          <img
            src="https://storage.googleapis.com/uxpilot-auth.appspot.com/400c793d5a-f61303d670a693d11a43.png"
            alt="CRM dashboard with pipeline management and customer insights"
            class="w-full h-64 object-cover"
          >
        </div>
      </div>
      <div class="space-y-6">
        <h2 class="text-4xl font-bold text-[#0F172A] mb-4">CRM & Insights</h2>
        <p class="text-lg text-[#475569] mb-6">
          Manage customer relationships and gain insights into your team's performance.
        </p>
        <ul class="space-y-3">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Visual pipeline management</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Account and contact management</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Integrated notes and task tracking</span>
          </li>
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-check text-[#00C4AB] mt-1"></i>
            <span class="text-[#475569]">Advanced reporting and analytics</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
