@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL

usecase "Cập nhật\ncustom status" as UC_Update
usecase "Kiểm tra\nthay đổi" as UC_Validate
usecase "Cập nhật\nIssueStatus" as UC_UpdateRecord
usecase "Cập nhật board\nview real-time" as UC_UpdateBoard
usecase "Cập nhật badge\ncủa issues" as UC_UpdateBadge
usecase "Chỉnh sửa trực tiếp\ntrên board" as UC_InlineEdit

PL --> UC_Update

UC_Validate .up.> UC_Update : <<include>>
UC_UpdateRecord .up.> UC_Update : <<include>>
UC_UpdateBoard .up.> UC_Update : <<include>>
UC_UpdateBadge .up.> UC_Update : <<include>>

UC_InlineEdit ..> UC_Update : <<extend>>



@enduml
