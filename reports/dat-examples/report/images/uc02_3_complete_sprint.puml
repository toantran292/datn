@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL

usecase "Hoàn thành sprint" as UC_Complete
usecase "Validate\ntrạng thái ACTIVE" as UC_ValidateActive
usecase "Xử lý issue\nchưa hoàn thành" as UC_HandleIssues
usecase "Chuyển status\nACTIVE→CLOSED" as UC_Close
usecase "Tính toán\nmetrics" as UC_Metrics
usecase "Tạo AI Sprint\nSummary" as UC_AISummary

PL --> UC_Complete

UC_ValidateActive .up.> UC_Complete : <<include>>
UC_HandleIssues .up.> UC_Complete : <<include>>
UC_Close .up.> UC_Complete : <<include>>
UC_Metrics .up.> UC_Complete : <<include>>

UC_AISummary ..> UC_Complete : <<extend>>




@enduml
