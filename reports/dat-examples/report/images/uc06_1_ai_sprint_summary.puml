@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL

usecase "AI Sprint\nSummary" as UC_Summary
usecase "Thu thập dữ liệu\nsprint" as UC_CollectData
usecase "Định dạng prompt\ncho AI" as UC_FormatPrompt
usecase "Gọi LLM API" as UC_CallAPI
usecase "Tạo tóm tắt\nvới các phần" as UC_GenSummary
usecase "Lưu summary\nvào Sprint" as UC_SaveSummary
usecase "Hiển thị\nsummary" as UC_ShowSummary

PL --> UC_Summary

UC_CollectData .up.> UC_Summary : <<include>>
UC_FormatPrompt .up.> UC_Summary : <<include>>
UC_CallAPI .up.> UC_Summary : <<include>>
UC_GenSummary .up.> UC_Summary : <<include>>
UC_SaveSummary .up.> UC_Summary : <<include>>
UC_ShowSummary .up.> UC_Summary : <<include>>

@enduml
