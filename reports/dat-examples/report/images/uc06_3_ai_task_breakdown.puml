@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL
actor "Team Member" as TM

usecase "AI Task\nBreakdown" as UC_Breakdown
usecase "Tạo prompt\nvới dữ liệu công việc" as UC_CreatePrompt
usecase "Gọi LLM API" as UC_CallAPI
usecase "Đề xuất\ncông việc con" as UC_SuggestTasks
usecase "Hiển thị\ncác công việc đề xuất" as UC_ShowSuggestions
usecase "Người dùng chọn\nvà điều chỉnh" as UC_Adjust
usecase "Tạo\ncông việc con" as UC_CreateSub

PL --> UC_Breakdown
TM --> UC_Breakdown

UC_CreatePrompt .up.> UC_Breakdown : <<include>>
UC_CallAPI .up.> UC_Breakdown : <<include>>
UC_SuggestTasks .up.> UC_Breakdown : <<include>>
UC_ShowSuggestions .up.> UC_Breakdown : <<include>>
UC_Adjust .up.> UC_Breakdown : <<include>>
UC_CreateSub .up.> UC_Breakdown : <<include>>

@enduml
