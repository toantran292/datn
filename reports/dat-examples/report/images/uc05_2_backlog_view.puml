@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL
actor "Team Member" as TM
actor "Viewer" as V

usecase "Xem Backlog view" as UC_BacklogView
usecase "Truy vấn tất cả\nsprint "Query all\nsprints & issues" công việc" as UC_QueryData
usecase "Nhóm công việc\ntheo các phần sprint" as UC_GroupSprints
usecase "Hiển thị\nBacklog section" as UC_ShowBacklog
usecase "Mở rộng/thu gọn\ncác phần" as UC_ExpandCollapse
usecase "Tạo sprint" as UC_CreateSprint
usecase "Bắt đầu sprint" as UC_StartSprint
usecase "Hoàn thành sprint" as UC_CompleteSprint
usecase "Kéo thả công việc\ngiữa các sprint" as UC_DragDrop

PL --> UC_BacklogView
TM --> UC_BacklogView
V --> UC_BacklogView

UC_QueryData .up.> UC_BacklogView : <<include>>
UC_GroupSprints .up.> UC_BacklogView : <<include>>
UC_ShowBacklog .up.> UC_BacklogView : <<include>>

UC_ExpandCollapse ..> UC_BacklogView : <<extend>>
UC_CreateSprint ..> UC_BacklogView : <<extend>>
UC_StartSprint ..> UC_BacklogView : <<extend>>
UC_CompleteSprint ..> UC_BacklogView : <<extend>>
UC_DragDrop ..> UC_BacklogView : <<extend>>



@enduml
