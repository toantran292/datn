@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL
actor "Team Member" as TM
actor "Viewer" as V

usecase "Filter và search\nissues" as UC_Filter
usecase "Lọc theo\nngười thực hiện" as UC_FilterAssignee
usecase "Lọc theo\nmức độ ưu tiên" as UC_FilterPriority
usecase "Lọc theo\nloại công việc" as UC_FilterType
usecase "Lọc theo\ntrạng thái" as UC_FilterStatus
usecase "Tìm kiếm theo\nmã/tên" as UC_Search
usecase "Kết hợp\nbộ lọc" as UC_CombineFilters
usecase "Xóa bộ lọc" as UC_ClearFilters

PL --> UC_Filter
TM --> UC_Filter
V --> UC_Filter

UC_FilterAssignee .up.> UC_Filter : <<include>>
UC_FilterPriority .up.> UC_Filter : <<include>>
UC_FilterType .up.> UC_Filter : <<include>>
UC_FilterStatus .up.> UC_Filter : <<include>>
UC_Search .up.> UC_Filter : <<include>>

UC_CombineFilters ..> UC_Filter : <<extend>>
UC_ClearFilters ..> UC_Filter : <<extend>>



@enduml
