@startuml
!theme plain
skinparam defaultFontSize 13
skinparam packageStyle rectangle
skinparam packageBorderThickness 2
skinparam rectangleBorderThickness 2
skinparam backgroundColor white

package "Viewer/Stakeholder" #lightblue {

  package "Xem thông tin project" #lightyellow {
    rectangle "Xem thông tin project"
    rectangle "Xem thành viên"
  }

  package "Xem sprint" #lightgreen {
    rectangle "Xem danh sách sprints"
    rectangle "Xem chi tiết sprint"
  }

  package "Xem công việc" #lavender {
    rectangle "Xem danh sách công việc"
    rectangle "Xem chi tiết công việc"
    rectangle "Xem comments (read-only)"
    rectangle "Xem activities (read-only)"
  }

  package "Xem Board & Timeline" #pink {
    rectangle "Xem Board/Backlog"
    rectangle "Xem Calendar"
    rectangle "Xem Timeline"
  }

  package "AI hỗ trợ" #orange {
    rectangle "Xem AI Sprint Summary"
  }

}

@enduml
