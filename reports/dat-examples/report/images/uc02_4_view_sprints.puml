@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL
actor "Team Member" as TM
actor "Viewer" as V

usecase "Xem danh sách\nsprint" as UC_List
usecase "Lọc theo\ndự án" as UC_Filter
usecase "Sắp xếp theo\ntrạng thái" as UC_Sort
usecase "Xem chi tiết\nsprint" as UC_Detail
usecase "Mở rộng/Thu gọn\ndanh sách công việc" as UC_Expand

PL --> UC_List
TM --> UC_List
V --> UC_List

PL --> UC_Detail
TM --> UC_Detail
V --> UC_Detail

UC_Filter .up.> UC_List : <<include>>
UC_Sort .up.> UC_List : <<include>>

UC_Expand ..> UC_Detail : <<extend>>



@enduml
