@startuml
!theme plain
skinparam defaultFontSize 13
skinparam packageStyle rectangle
skinparam packageBorderThickness 2
skinparam rectangleBorderThickness 2
skinparam backgroundColor white

package "Project Lead" #lightblue {

  package "Quản lý project" #lightyellow {
    rectangle "Tạo/Cập nhật project"
    rectangle "Cấu hình custom status"
    rectangle "Quản lý công việc"
  }

  package "Quản lý sprint" #lightgreen {
    rectangle "Tạo/Quản lý sprint"
    rectangle "Bắt đầu sprint"
    rectangle "Hoàn thành sprint"
  }

  package "Quản lý thành viên" #lavender {
    rectangle "Mời/Xóa thành viên"
    rectangle "Phân quyền"
  }

  package "Báo cáo & Analytics" #pink {
    rectangle "Xem báo cáo tuần"
    rectangle "Thu thập analytics"
  }

  package "AI hỗ trợ" #orange {
    rectangle "AI Sprint Summary"
    rectangle "AI tạo/tinh chỉnh task"
  }

}

@enduml
