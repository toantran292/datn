@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL
actor "Team Member" as TM
actor "Viewer" as V

usecase "Xem Board view" as UC_BoardView
usecase "Truy vấn sprint\nACTIVE "Query ACTIVE\nsprint & issues" công việc" as UC_QueryData
usecase "Nhóm công việc\ntheo cột trạng thái" as UC_GroupColumns
usecase "Hiển thị\nissue cards" as UC_ShowCards
usecase "Drag-and-drop\nissues" as UC_DragDrop
usecase "Xem chi tiết\nissue" as UC_ViewIssue
usecase "Complete\nsprint" as UC_CompleteSprint
usecase "Lọc công việc" as UC_Filter

PL --> UC_BoardView
TM --> UC_BoardView
V --> UC_BoardView

UC_QueryData .up.> UC_BoardView : <<include>>
UC_GroupColumns .up.> UC_BoardView : <<include>>
UC_ShowCards .up.> UC_BoardView : <<include>>

UC_DragDrop ..> UC_BoardView : <<extend>>
UC_ViewIssue ..> UC_BoardView : <<extend>>
UC_CompleteSprint ..> UC_BoardView : <<extend>>
UC_Filter ..> UC_BoardView : <<extend>>



@enduml
