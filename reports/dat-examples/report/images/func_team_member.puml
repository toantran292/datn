@startuml
!theme plain
skinparam defaultFontSize 13
skinparam packageStyle rectangle
skinparam packageBorderThickness 2
skinparam rectangleBorderThickness 2
skinparam backgroundColor white

package "Team Member" #lightblue {

  package "Quản lý công việc" #lightyellow {
    rectangle "Tạo công việc"
    rectangle "Cập nhật công việc"
    rectangle "Xóa công việc"
    rectangle "Assign công việc"
    rectangle "Reorder công việc"
    rectangle "Thêm comment"
    rectangle "Upload file đính kèm"
  }

  package "Xem & theo dõi" #lightgreen {
    rectangle "Xem Board/Backlog"
    rectangle "Xem Calendar"
    rectangle "Xem Timeline"
  }

  package "AI hỗ trợ" #lavender {
    rectangle "AI tạo công việc"
    rectangle "AI tinh chỉnh mô tả"
    rectangle "Xem AI Sprint Summary"
  }

}

@enduml
