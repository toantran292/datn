@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "System" as SYS

usecase "LLM API\nIntegration" as UC_LLM
usecase "Tải cấu hình\nLLM" as UC_LoadConfig
usecase "Định dạng\nprompt" as UC_FormatPrompt
usecase "Gửi HTTP\nrequest" as UC_SendHTTP
usecase "Nhà cung cấp LLM\nxử lý" as UC_Process
usecase "Phân tích và\nkiểm tra phản hồi" as UC_Parse
usecase "Ghi log" as UC_Log
usecase "Trả kết quả" as UC_Return

SYS --> UC_LLM

UC_LoadConfig .up.> UC_LLM : <<include>>
UC_FormatPrompt .up.> UC_LLM : <<include>>
UC_SendHTTP .up.> UC_LLM : <<include>>
UC_Process .up.> UC_LLM : <<include>>
UC_Parse .up.> UC_LLM : <<include>>
UC_Log .up.> UC_LLM : <<include>>
UC_Return .up.> UC_LLM : <<include>>

@enduml
