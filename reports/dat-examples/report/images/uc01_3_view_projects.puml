@startuml
!theme plain
skinparam defaultFontSize 11
skinparam usecaseFontSize 10

left to right direction

actor "Project Lead" as PL
actor "Team Member" as TM
actor "Viewer" as V

usecase "Xem danh sách\ndự án" as UC_List
usecase "Xem chi tiết\ndự án" as UC_Detail
usecase "Xem bảng Board" as UC_Board
usecase "Xem bảng Backlog" as UC_Backlog
usecase "Xem tóm tắt" as UC_Summary

PL --> UC_List
TM --> UC_List
V --> UC_List

PL --> UC_Detail
TM --> UC_Detail
V --> UC_Detail

UC_Board ..> UC_Detail : <<extend>>
UC_Backlog ..> UC_Detail : <<extend>>
UC_Summary ..> UC_Detail : <<extend>>

@enduml
